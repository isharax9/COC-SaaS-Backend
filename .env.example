# ===============================================
# COC-SaaS Backend Environment Configuration
# ===============================================

# -----------------------------------------------
# Application Environment
# -----------------------------------------------
NODE_ENV=development
PORT=3001

# -----------------------------------------------
# Database Configuration (Prisma)
# -----------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/coc_saas?schema=public"

# -----------------------------------------------
# Redis Configuration
# -----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------
# JWT Authentication
# -----------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-also
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------------
# Frontend Configuration
# -----------------------------------------------
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------
# Clash of Clans API Configuration
# -----------------------------------------------
# Get your API token from: https://developer.clashofclans.com/
COC_API_TOKEN=your-clash-of-clans-api-token-here
COC_API_BASE_URL=https://api.clashofclans.com/v1

# API Polling Configuration (in milliseconds)
COC_POLL_INTERVAL_WAR=300000          # 5 minutes for active wars
COC_POLL_INTERVAL_CLAN=600000         # 10 minutes for clan data
COC_POLL_INTERVAL_PLAYER=3600000      # 1 hour for player profiles

# -----------------------------------------------
# Swagger API Documentation
# -----------------------------------------------
ENABLE_SWAGGER=true
SWAGGER_PATH=api

# -----------------------------------------------
# Logging & Monitoring
# -----------------------------------------------
LOG_LEVEL=debug